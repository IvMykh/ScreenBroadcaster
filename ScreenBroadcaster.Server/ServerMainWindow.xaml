<Window x:Class="ScreenBroadcaster.Server.ServerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Console" Height="300" Width="300" Initialized="Window_Initialized" MinWidth="250" MinHeight="150">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button x:Name="startButton" x:FieldModifier="private" Content="Start" 
                HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" />
        
        <Button x:Name="stopButton" x:FieldModifier="private" Content="Stop" 
                HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="100" IsEnabled="False" Grid.Column="1"/>

        <RichTextBox x:Name="consoleRichTextBox" x:FieldModifier="private" Margin="10,40,10,10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                     VerticalScrollBarVisibility="Auto">
        </RichTextBox>
    </Grid>
</Window>
