<Window x:Class="ScreenBroadcaster.Client.ClientMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize" Initialized="Window_Initialized">
    <Grid>
        <StackPanel x:Name="signInPanel" x:FieldModifier="private" Margin="10,0" MaxWidth="550" Visibility="Visible">
            <Label Content="Enter user name:"/>
            <Grid>
                <TextBox x:Name="UserNameTextBox" Height="20" Margin="0,0,80,0"/>
                <Button x:Name="signInButton" x:FieldModifier="private" Content="Sign In" Width="75" HorizontalAlignment="Right"/>
            </Grid>

            <Label x:Name="statusText" x:FieldModifier="private" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,10"/>
            <Button Name="startStopGenButton" x:FieldModifier="private" Content="Start Generation" />
            <Label  Name="numDisplayLabel" x:FieldModifier="private" Content="0" TextBlock.TextAlignment="Center" />
        </StackPanel>
        <StackPanel x:Name="chatPanel" x:FieldModifier="private" Margin="10" MaxWidth="550" Visibility="Collapsed">
            <Grid>
                <TextBox x:Name="messageTextBox" x:FieldModifier="private" Height="20" TextWrapping="Wrap" Margin="0,0,160,0"/>
                <Button x:Name="sendAllButton" x:FieldModifier="private" Content="Send All" Width="75" Height="20" IsDefault="True" IsEnabled="False" Margin="424,0,0,0" />
            </Grid>
            <RichTextBox x:Name="consoleRichTextBox" x:FieldModifier="private" HorizontalAlignment="Left" Height="461" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,10" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
